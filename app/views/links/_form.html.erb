<%= form_for @link, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :project_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :project_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :from_artifact_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :from_artifact_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :to_artifact_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :to_artifact_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                links_path, :class => 'btn' %>
  </div>
<% end %>
