<h1>Listing links</h1>

<table>
  <tr>
    <th>Project</th>
    <th>From artifact</th>
    <th>To artifact</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.project %></td>
    <td><%= link.from_artifact %></td>
    <td><%= link.to_artifact %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

